<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
   <id>all</id>
   <formats>
      <format>jar</format>
   </formats>
   <includeBaseDirectory>false</includeBaseDirectory>
   <moduleSets>
      <moduleSet>
         <useAllReactorProjects>true</useAllReactorProjects>
         <includes>
            <include>org.infinispan.doclets:infinispan-doclets-common</include>
         </includes>
         <binaries>
            <unpack>true</unpack>
            <includeDependencies>false</includeDependencies>
         </binaries>
      </moduleSet>
      <moduleSet>
         <useAllReactorProjects>true</useAllReactorProjects>
         <includes>
            <include>org.infinispan.doclets:infinispan-doclets-java8</include>
         </includes>
         <binaries>
            <unpack>true</unpack>
            <includeDependencies>false</includeDependencies>
            <unpackOptions>
               <excludes>
                  <exclude>/META-INF/**</exclude>
               </excludes>
            </unpackOptions>
         </binaries>
      </moduleSet>
      <moduleSet>
         <useAllReactorProjects>true</useAllReactorProjects>
         <includes>
            <include>org.infinispan.doclets:infinispan-doclets-java11</include>
         </includes>
         <binaries>
            <outputDirectory>META-INF/versions/11</outputDirectory>
            <unpack>true</unpack>
            <includeDependencies>false</includeDependencies>
            <unpackOptions>
               <excludes>
                  <exclude>/META-INF/**</exclude>
               </excludes>
            </unpackOptions>
         </binaries>
      </moduleSet>
   </moduleSets>
</assembly>
